<h1>All Tags</h1>

<ul id="tags">
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag.name, tag_path(tag), class: 'article_title', id: "tag_#{tag.id}" %>
			&nbsp;&nbsp;
			<%if logged_in? %>
				<%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Really delete this tag?"} %>	
			<% end %>	
		</li>
	<% end %>
</ul>
<br />
<%= link_to "<< Back to Articles List", articles_path %>